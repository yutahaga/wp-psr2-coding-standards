<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="WordPress PSR2" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/squizlabs/PHP_CodeSniffer/master/phpcs.xsd">
  <description>WordPress PSR2 Coding Standards</description>

  <rule ref="PSR2" />
  <rule ref="WordPress-Extra">
    <exclude name="PSR2" />
    <exclude name="WordPress.PHP.YodaConditions" />
    <exclude name="WordPress.Files.FileName" />
    <exclude name="WordPress.WhiteSpace" />
    <exclude name="WordPress.Arrays.ArrayDeclarationSpacing" />
    <exclude name="WordPress.Arrays.ArrayKeySpacingRestrictions" />
    <exclude name="WordPress.CodeAnalysis.AssignmentInCondition.Found" />
    <exclude name="WordPress.WP.EnqueuedResourceParameters" />
    <exclude name="Generic.WhiteSpace" />
    <exclude name="Generic.Functions.OpeningFunctionBraceKernighanRitchie" />
    <exclude name="Squiz.WhiteSpace" />
    <exclude name="Squiz.Functions.FunctionDeclarationArgumentSpacing" />
    <exclude name="PEAR.Functions.FunctionCallSignature" />
  </rule>
</ruleset>
