{
  "name": "yutahaga/wpcs-psr2",
  "type": "phpcodesniffer-standard",
  "description": "PHP_CodeSniffer ruleset to enforce WordPress & PSR-2 coding conventions",
  "keywords": [
    "phpcs",
    "standards",
    "WordPress"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Contributors",
      "homepage": "https://github.com/yutahaga/wp-psr2-coding-standards/graphs/contributors"
    }
  ],
  "require": {
    "php": ">=5.4",
    "squizlabs/php_codesniffer": "^3.4.1",
    "wp-coding-standards/wpcs": "^2.0.0"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "*"
  },
  "minimum-stability": "RC",
  "scripts": {
    "check-cs": [
      "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs"
    ],
    "fix-cs": [
      "@php ./vendor/squizlabs/php_codesniffer/bin/phpcbf"
    ],
    "install-codestandards": [
      "Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run"
    ]
  },
  "support": {
    "issues": "https://github.com/yutahaga/wp-psr2-coding-standards/issues",
    "source": "https://github.com/yutahaga/wp-psr2-coding-standards"
  }
}
